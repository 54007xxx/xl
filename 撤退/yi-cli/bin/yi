#! /usr/bin/env node

// console.log('yi-cli~~~') //npm link

// 1 配置可执行命令 commander
const program = require('commander')

program
    .version(`zhufeng-cli@${require('../package.json').version}`)
    .usage(`<command> [option]`)

program.parse(process.argv)

